<resources>

    <!-- Base application theme. -->
    <style name="MyTravelTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Default Theme -->
    <style name="MyTravelTheme" parent="MyTravelTheme.Base">

    </style>

    <!-- Splashscreen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/background_splashscreen
        </item>
    </style>

    <style name="MyTravelTheme.CircularProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_strokeColor">@color/accent</item>
    </style>

</resources>
